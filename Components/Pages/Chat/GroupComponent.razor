@page "/groupcomponent"
@rendermode InteractiveServer

@attribute [Authorize]

<h3>GroupComponent</h3>

@if (manageGroupService.Groups == null)
{
    <p>Loading messages...</p>
}
else
{
    @foreach (var groups in manageGroupService.Groups)
    {
        <button @onclick="() => JoinToGroupButton(groups.ChatId)">@groups.ChatName</button>
    }
}

<div class="input-field col s12">
    <InputText @bind-Value="GroupDTO.GroupName" id="text"></InputText>
    <label for="text">Group Name</label>
</div>

<div class="input-field col s12">
    <button @onclick="CreateGroup">Send</button>
</div>
