@page "/register"
@rendermode InteractiveServer

<div class="container">
    <div class="row">
        <form class="col s12">
            <div class="row">
                <EditForm Model="Register" OnValidSubmit="RegisterClicked">
                    <DataAnnotationsValidator />
                    <div class="input-field col s12">
                        <InputText @bind-Value="Register.FirstName" id="firstname" type="text"></InputText>
                        <label for="firstname">First Name</label>
                    </div>
                    <div class="input-field col s12">
                        <InputText @bind-Value="Register.LastName" id="lastname" type="text"></InputText>
                        <label for="lastname">Last Name</label>
                    </div>
                    <div class="input-field col s12">
                        <InputText @bind-Value="Register.Nickname" id="nickname" type="text"></InputText>
                        <label for="nickname">Nickname</label>
                    </div>
                    <div class="input-field col s12">
                        <InputDate @bind-Value="Register.DOB" id="dob" ></InputDate>
                        <label for="lastname">Date of Birth</label>
                    </div>
                    <div class="input-field col s12">
                        <InputFile OnChange="HandleSelected"></InputFile>
                        <label for="profilepicture">Profile Picture</label>
                    </div>
                    <div class="input-field col s12">
                        <InputText @bind-Value="Register.Email" id="email" type="email"></InputText>
                        <label for="email">Email</label>
                    </div>
                    <div class="input-field col s12">
                        <InputText @bind-Value="Register.Password" id="password" type="password"></InputText>
                        <label for="password">Password</label>
                    </div>
                    <div class="input-field col s12">
                        <InputText @bind-Value="Register.ConfirmPassword" id="confirmpassword" type="password"></InputText>
                        <label for="confirmpassword">Confirm Password</label>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        Submit
                        <i class="material-icons right">send</i>
                    </button>
                    <ValidationSummary />
                </EditForm>
            </div>
        </form>
    </div>
</div>


